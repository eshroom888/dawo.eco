# DAWO.ECO Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Shopify Integration (Story 3.1)
# =============================================================================
# Your Shopify store domain (e.g., dawo-store.myshopify.com)
MYSHOPIFY_DOMAIN=your-store.myshopify.com

# Shopify Admin API access token
# Create at: Shopify Admin > Settings > Apps > Develop apps
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Google Drive Integration (Story 3.2)
# =============================================================================
# Path to Google Cloud service account JSON file
# Create at: console.cloud.google.com > IAM & Admin > Service Accounts
GOOGLE_DRIVE_CREDENTIALS_PATH=./credentials/google-drive-service-account.json

# Optional: Root folder ID in Google Drive (auto-creates if not set)
GOOGLE_DRIVE_ROOT_FOLDER_ID=

# =============================================================================
# Orshot Integration (Story 3.4)
# =============================================================================
# Orshot API key for branded graphics generation
# Get from: orshot.com/dashboard
ORSHOT_API_KEY=orshot_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Gemini / Nano Banana Integration (Story 3.5)
# =============================================================================
# Google Gemini API key for AI image generation
# Get from: aistudio.google.com/apikey
GEMINI_API_KEY=AIzaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Discord Notifications
# =============================================================================
# Discord webhook URL for notifications
# Create at: Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx/xxxxx

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dawo_eco

# =============================================================================
# Redis (Cache/Queue)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Instagram Graph API (Epic 4)
# =============================================================================
# Instagram Business Account credentials (for future use)
# INSTAGRAM_ACCESS_TOKEN=
# INSTAGRAM_BUSINESS_ACCOUNT_ID=

# =============================================================================
# Gmail API (Epic 5)
# =============================================================================
# Gmail API credentials (for future use)
# GMAIL_CREDENTIALS_PATH=./credentials/gmail-oauth.json
